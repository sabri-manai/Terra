<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 style=" color: #CF9817;  font-family: Diavlo Light , Diavlo , sans-serif ;  " class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Edit supplier
        </h1>
            <hr>
       
            <%- include('../partials/flashMessages') -%>     
            
            <form  action="/suppliers/updateSupplier" method="post">

                <input type="hidden" name="id" value="<%=supplier.id%>">

                <div class="form-group">
                    <label for="name">Supplier name</label>
                    <input type="text" name="name" value="<%= supplier.name%>" id="name" class="form-control">
                </div>
               
                <div class="form-group">
                    <label for="productName">Product name</label>
                    <input type="text" name="productName" value="<%= supplier.productName%>" id="productName" class="form-control">
                </div>

                <div class="form-group">
                    <label for="price">Price of one unity </label>
                    <input type="text" name="price" value="<%= supplier.price%>" id="price" class="form-control">
                </div>

                <div class="form-group">
                    <label for="phone">Phone </label>
                    <input type="text" name="phone" value="<%= supplier.phone%>" id="phone" class="form-control">
                </div>

                <div class="form-group">
                    <label for="email">Supplier email </label>
                    <input type="text" name="email" value="<%= supplier.email%>" id="email" class="form-control">
                </div>
                    
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-warning  btn-block"> update supplier</button>
                </div>       
            </form>

            
        </div>
    </div>
</div>

    
<%- include('../partials/footer') -%>