<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>

<div class="container">
    <div class="row mt-4">
        <div class="col-md-9 offset-md-3">
            <h1 class="display-4">Add New Event:</h1>
            <hr>
       
            <%- include('../partials/flashMessages') -%>      
            <form  action="/events/create" method="post">
                        <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="tile" placeholder="Name this event!" class="form-control">
                        </div>

                        <div class="form-group">
                                <label for="date">Date</label>
                                <input type="date" name="date" id="date" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="time">Time</label>
                            <input type="time" name="time" id="time" class="form-control">
                        </div>

                        <div class="form-group">
                                <label for="location"> <i class="fas fa-location-arrow"></i> Location</label>
                                <input type="text" name="location" id="location" placeholder="Please choose the location of your event!" class="form-control">
                            </div>

                        <div class="form-group">
                                <label for="description">Description</label>
                               <textarea name="description" rows="4" placeholder="Write a small description of the event!" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="sport">Choose one sport:</label>
                            <select name="sport" id="sport">
                              <option value="soccer">soccer</option>
                              <option value="basketball">basketball</option>
                              <option value="tennis">tennis</option>
                              <option value="baseball">baseball</option>
                              <option value="golf">golf</option>
                              <option value="running">running</option>
                              <option value="volleyball">volleyball</option>
                              <option value="swimming">swimming</option>
                              <option value="boxing">boxing</option>
                              <option value="table tennis">table tennis</option>
                              <option value="rugby">rugby</option>
                              <option value="football">football</option>
                              <option value="karate">karate</option>
                              <option value="cycling">cycling</option>
                              <option value="fishing">fishing</option>
                              <option value="gymnastics">gymnastics</option>
                              <option value="taekwondo">taekwondo</option>
                              <option value="kickboxing">kickboxing</option>
                              <option value="handball">handball</option>
                            </select>
                        </div>
                    
                        <div class="form-group">
                        <button type="submit" class="btn btn-primary"> Create</button>
                        </div>
            </form>
        </div>
    </div>
</div>

    
<%- include('../partials/footer') -%>