<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="images/VPMAIN.jpg" alt="First slide" height="650">
        <div class="carousel-caption d-none d-md-block">
          <h2>All sports</h2>
          <p>Explore new Events</p>
        <% if (!user) { %>
          <a class="btn btn-primary" href="/users/login" role="button">Sign in <i class="fa fa-sign-in"></i> </a>
        <%}%>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="images/sport.jpg" alt="Second slide" height="650">
        <div class="carousel-caption d-none d-md-block">
          <h2>Discover</h2>
          <p>Meet!</p>
          <% if (!user) { %>
            <a class="btn btn-primary" href="/users/login" role="button">Sign in <i class="fa fa-sign-in"></i> </a>
          <%}%>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="images/champ.jpg" alt="Third slide" height="650">
        <div class="carousel-caption d-none d-md-block">
          <h2>Come on </h2>
          <p>Be one of the largest sport community</p>
          <hr>
          <% if (!user) { %>
            <a class="btn btn-primary" href="/users/login" role="button">Sign in <i class="fa fa-sign-in"></i> </a>
          <%}%>        </div>
      </div>
    </div>
    
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>